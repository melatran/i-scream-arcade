<header class='game_styling'>
<div class="container">
  <section style="display: flex; flex-direction: row; justify-content: space-evenly; padding-top: 7em">
  <div class="game_info">
  <div>
    <div class="row">
      <div class="col-sm-6">
        <h2 class="game_title"><%= @game.name %></h2>
          <%= image_tag  @game.cover, :class => "style_image" %>
          <%= button_to user_games_path(@game.id), method: :post, class: "transparent save-game" do %>
            <i class="fa fa-gamepad fa-4x", aria-hidden="true"></i>
          <% end %>
      </div>
      <div class="col-sm-6">
      <section id="about">
        <p class="ratings_info">Average User Rating: <%= @game.average_user_rating.round(2) %> Average Critic Rating: </p>
        <iframe width="470" height="300" src="https://www.youtube.com/embed/ASWgJvuQhTA"></iframe>
        <p class="solid_text"><%= "Tell me something more asdfklasjdfljasldfjlasjflkajslkfjsaklfjklasjklfjwelfjweiojiwers sf safjlrjliwr  sfdasfasdf "%></p>
      </section>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-6">
      <section id="similars">
        <h3>Related Games</h3>
      </section>
    </div>

    <div class="col-sm-6">
     <section id="reviews">
       <h3> Reviews </h3>
       <p class="solid_text">Number of reviews (<%= @game.reviews.count %>)</p>
       <center><button class="review"><%= link_to 'Write a Review', "/games/#{@game.id}/review" %></button></center>
       <br>
       <div class="scrolling-box">
      <% else %>
       <% @game.reviews.each do |review|%>
        <section class="review-<%= review.id %>">
         <h5><%= review.title %></h5>
         Rating: <%= review.user_rating %>
         <p><%= review.content %></p>
        </section>
      <% end %>
      </div>
     </section>
   </div>
  </div>
</div>
</div>
</div>
</header>
