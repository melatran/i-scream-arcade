<h1>Game Library</h1>

<table>
  <tr>
    <th>Favorite</th>
    <th>Game Cover</th>
    <th>Title</th>
    <th>Rating/100</th>
    <th>Popularity</th>
    <th>Themes</th>
    <th>Video</th>
  </tr>
<%@games.each do |game| %>
    <tr id="game-<%= game.id %>">
      <td><%= button_to "Add to My Games", user_games_path(game.id), method: :post %></td>
      <td><img class="game-img" src="<%=game.cover %>" alt=""></td>
      <td><%=game.title %></td>
      <td><%=game.agg_rating %></td>
      <td><%=game.popularity %></td>
      <td><%=game.themes %></td>
      <td><%=game.video %></td>
    </tr>
<% end %>
</table>

